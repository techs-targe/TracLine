# TracLine Environment Configuration Template
# Copy this file to .env and customize as needed

# Database Configuration
DB_NAME=tracline
DB_USER=postgres
DB_PASS=postgres
DB_HOST=localhost
DB_PORT=5432

# Docker PostgreSQL Configuration (matches docker-compose.yml)
POSTGRES_DB=tracline
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# TracLine Application Configuration
TRACLINE_CONFIG_PATH=~/.tracline
TRACLINE_UPLOAD_DIR=~/.tracline/uploads
TRACLINE_DB_PASSWORD=postgres

# Default User Settings
TRACLINE_ASSIGNEE=your_name_here
TRACLINE_PROJECT=DEFAULT-PROJECT

# Web Server Configuration
WEB_HOST=0.0.0.0
WEB_PORT=8000

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
DEVELOPMENT=false

# Optional: GitHub Integration (Experimental)
# GITHUB_TOKEN=ghp_your_github_personal_access_token

# Optional: Override Configuration File Location
# TRACLINE_CONFIG=./tracline.yaml

# Optional: Disable Strict Mode
# TRACLINE_DISABLE_STRICT_MODE=true